{
    "compilerOptions": {
        "target": "es5",
        "module": "system",
        "jsx": "react",
        "sourceMap": true,
        "removeComments": true,
        "strict": false,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "baseUrl": "./src",
        "paths": { "*": ["js/*"] },
        "lib": ["DOM", "ES6"],
        "typeRoots": ["./node_modules/@types"]
    },
    "exclude": [
        "./src/js/libraries/*.js",
        "./src/jspm",
        "node_modules"
    ]
}
